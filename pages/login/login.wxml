<!--logs.wxml-->

<view class="page">
    <view class="page__hd">
        <view class="section__ctn">
            <image src="../images/logoko.png" style="width:220px; height:180px;" ></image>
        </view>
    </view>
    <view class="container2">
    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </view>
    <view class="page__bd">
      <view class="section">
        <text>名称：</text>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  
      </view>
      <view class="section">
        <text>性别：</text>
        <text wx:if="{{userInfo.gender==1}}" class="userinfo-nickname">男</text>
        <text wx:if="{{userInfo.gender==2}}" class="userinfo-nickname">女</text>
      </view>
      <view class="section">
        <text>来自：</text>
        <text wx:if="{{userInfo.province}}!=null"class="userinfo-nickname">{{userInfo.province}},</text>
        <text wx:if="{{userInfo.city}}!=null"class="userinfo-nickname"> {{userInfo.city}}</text>
        
      </view>

    </view>
</view>