}
.box{
    margin-top:50rpx;
    margin-bottom: 30rpx;
    width: 600rpx;
    margin-left: 160rpx;
    margin-right: auto;
}
.ripple {
    pointer-events:none;
    border-radius: 10px;
    height:20px;
    width:20px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(12);
    transform: scale(3);
    background-color: transparent;
    }
}
.ripple1 {
    pointer-events:none;
   font-size:15px;
    opacity:0.4;
    margin-top: -104px;
    margin-left:-15px;
    position: absolute;
}
