page{
  height:100%
}
.chessboard
{
	background-color: #ffffff;
	margin: 50rpx;
	height: 650rpx;
	width: 650rpx;
	border-radius: 15rpx;
	display: flex;
	flex-direction: column;
	padding: 6rpx;
}

.chessboard .row
{
	display: flex;
	flex: 1;
}

.chessboard .row .column
{
	font-size: 20px;
	color: #776e65;
	flex: 1;
	margin: 0rpx;
	background-color: #ffffff;
	border-radius: 0rpx;
  
	display: flex;
	flex-direction: column;
	text-align: center;
	justify-content: center;
}
.usermotto {
  color:white;
  margin-top: 25px;
  font-weight: 700;
  text-align: center;
  
}
.usermotto1 {
